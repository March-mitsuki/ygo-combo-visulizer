{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@qupidjs/types/api": ["./packages/types/api"],
      "@qupidjs/types/models": ["./packages/types/models"],
      "@qupidjs/httpclient": ["./packages/httpclient/src"],
      "@server/*": ["./packages/server/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["scripts/**/*.ts"]
}
